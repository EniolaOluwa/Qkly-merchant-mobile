{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-native",
    "typeRoots": ["./src/types"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@assets/*": ["./assets/*"],
      "@routes/*": ["./routes/*"],
      "@modules/*": ["./modules/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@api/*": ["./api/*"],
      "@store/*": ["./store/*"]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "@tsconfig/react-native/tsconfig.json"]
}
